<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.rtcab.ceotocf.web.screens.customer">
    <data>
        <instance id="customerDc"
                  class="com.rtcab.ceotocf.entity.Customer"
                  view="customer-view">
            <loader/>
            <instance id="invoiceAddressDc" property="invoiceAddress"/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="customerDc">
            <column width="250px">
                <textField id="nameField" property="name"/>
                <pickerField id="invoiceAddressField" property="invoiceAddress">
                    <actions>
                        <action id="open_composition" type="picker_open_composition"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
